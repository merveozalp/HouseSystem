@model BlockDto
@{
    ViewData["Title"] = "Save";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Block" asp-action="Save" class="was-validated">
    <div class="mb-3">
        <label asp-for="BlockName" class="form-label">Bloğun İsmi</label>
        <input type="text" class="form-control" asp-for="BlockName" required>
        <span asp-validation-for="BlockName" class="text-danger"></span>
    </div>
 
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>
