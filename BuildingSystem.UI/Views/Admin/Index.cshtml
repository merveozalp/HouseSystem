@using Entites.Entitiy;
@model List<User>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<table class="table table-bordered table-striped">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Tc Kimlik Numarası</th>
        <th>İsim</th>
        <th>Soyisim</th>
        <th>Telefon Numarası</th>
        <th>Email</th>
        <th>Araba Plakası</th>
        <th>Roller Atama</th>
        <th>Rol Atama</th>

    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan=3>Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                
                <td>@item.UserName</td>
                <td>@item.IdentityNo</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.CarNo</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">  Rol ata</a> </td>
                <td><a class="btn btn-success" asp-controller="Admin" asp-action="PassiveUser" asp-route-id="@item.Id">  Üyeyi Aktif/Pasif Hale Getir</a> </td>
            </tr>
        }
    }
</table>