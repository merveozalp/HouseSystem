@model List<FlatDto>
<div class="m-0">
    <h3>Siteye Yeni Bir Daire Ekle</h3>
    <a class="btn btn-success btn-sm" asp-controller="Admin" asp-action="AddFlat">
        Daire Ekle
    </a>
</div>
<table id="myDataTable" class="table table-hover table-striped">
    <thead class="thead-light">
        <tr>
            <th scope="col">Kişi İsmi</th>
            <th scope="col">Bina İsmi</th>
            <th scope="col">Daire Numarası</th>
            <th scope="col">Daire Tipi</th>
            <th scope="col">Konaklama Şekli</th>
            <th scope="col">Daire Durumu</th>

            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@menu.UserName</td>
                <td>@menu.BuildingName</td>
                <td>@menu.FlatNumber</td>
                <td>@menu.FlatType</td>
                <td>@menu.IsOwner</td>
                <td>
                    @if (menu.IsEmpty == false)
                    {
                        <span class="badge badge-success">Boş</span>

                    }
                    else
                    {
                        <span class="badge badge-success">Dolu</span>
                    }
                </td>
                
                <td>
                    <a href="/Flat/Update?id=@menu.Id" class="btn btn-warning">Düzenle</a>
                    <a href="/Flat/Delete?id=@menu.Id" class="btn btn-danger">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>