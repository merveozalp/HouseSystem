@model IEnumerable<ExpenseDto>
@{
    ViewData["Title"] = "GetUnpaidExpense";
    Layout = "~/Views/Shared/_OccupantLayout.cshtml";
}

<div class="container mb-3 mt-3">
<h3>Ödenmemiş Faturalar Listesi</h3>
</div>
@if (TempData["Messages"] != null)
{
    <div class="alert alert-info">@TempData["Messages"]</div>
}

<table id="myDataTable" class="table table-hover table-striped">
    <thead class="thead-light">
        <tr>
           
            <th scope="col">Ödenme Durumu</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Tarih</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Daire Numarası</th>
            <th scope="col">Gider Tipi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expense in Model)
        {
            <tr>
               
                <td>@expense.IsPaid</td>
                <td>@expense.Cost</td>
                <td>@expense.InvoiceDate</td>
                <td>@expense.UserName</td>
                <td>@expense.FlatNumber</td>
                <td>@expense.ExpenseTypeName</td>
                <td>
                    <a href="/Home/CreatePayment?id=@expense.Id" class="btn btn-success">Öde</a>

                </td>
            </tr>
        }
    </tbody>
</table>

