@model MessageDto
@{
    ViewData["Title"] = "SendMessageToAdmin";
    Layout = "~/Views/Shared/_OccupantLayout.cshtml";
}


<form asp-controller="Home" asp-action="SendMessageToAdmin" class="was-validated">
    <div class="mb-3">
        <label asp-for="MessageContent" class="form-label"></label>
        <textarea asp-for="MessageContent"></textarea>
        <script>
            CKEDITOR.replace('MessageContent');
        </script>
    </div>

    <div class="mb-3">
        <label asp-for="Body" class="form-label"></label>
        <textarea asp-for="Body"></textarea>
        <script>
            CKEDITOR.replace('Body');
        </script>
    </div>
    <span asp-validation-for="Body" class="text-danger"></span>
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>

