@model List<FlatDto>
<div class="m-0">
    <h3>Siteye Yeni Bir Daire Ekle</h3>
    <a class="btn btn-success btn-sm" asp-controller="Flat" asp-action="AddFlat">
        Daire Ekle
    </a>
</div>
<table id="myDataTable" class="table table-hover table-striped">
    <thead class="thead-light">
        <tr>
            <th scope="col">Kişi İsmi</th>
            <th scope="col">Bina İsmi</th>
            <th scope="col">Daire Numarası</th>
            <th scope="col">Daire Tipi</th>
            <th scope="col">Konaklama Şekli</th>
            <th scope="col">Daire Durumu</th>

            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var menu in Model)
        {
            <tr>
                <td>@menu.UserName</td>
                <td>@menu.BuildingName</td>
                <td>@menu.FlatNumber</td>
                <td>@menu.FlatType</td>
                <td>@if(menu.IsOwner == FlatIsOwner.Kiracı)
                    {
                        <span class="badge badge-success">Kiracı</span>

                    }
                    else
                    {
                        <span class="badge badge-success">Ev Sahibi</span>
                    }</td>
                <td>
                    <td>
                    @if(menu.IsEmpty== FlatIsEmpty.Boş)
                    {
                        <span class="badge badge-success">Boş</span>

                    }
                    else
                    {
                        <span class="badge badge-success">Dolu</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning " asp-controller="Flat" asp-action="UpdateFlat"
                   asp-route-id="@menu.Id">
                        Güncelle
                    </a>
                    <a class="btn btn-danger " asp-controller="Flat" asp-action="DeleteFlat"
                   asp-route-id="@menu.Id">
                        Sil
                    </a>
                </td>
             
            </tr>
        }
    </tbody>
</table>