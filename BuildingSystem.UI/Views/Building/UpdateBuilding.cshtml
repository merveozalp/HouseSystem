@model BuildingDto
@{
    ViewData["Title"] = "Update";
}


<form asp-controller="Building" asp-action="UpdateBuilding" class="was-validated">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Bloğun İsmi</label>
        <input type="text" class="form-control" asp-for="Name" required>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TotalFlat" class="form-label">Toplam Daire Sayısı</label>
        <input type="number" class="form-control" asp-for="TotalFlat" required>
        <span asp-validation-for="TotalFlat" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>




