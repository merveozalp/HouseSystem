@model BuildingDto
@{
    ViewData["Title"] = "Update";
}


<form asp-controller="Building" asp-action="UpdateBuilding" class="was-validated">
    <div class="mb-3">
        <label asp-for="blockId" class="form-label"> Block Seçiniz </label>
        <select asp-for="blockId" asp-items="ViewBag.Block" class="form-control"></select>
        <span asp-validation-for="blockId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="BuildingName" class="form-label">Bina İsmi</label>
        <input type="text" class="form-control" asp-for="BuildingName" required>
        <span asp-validation-for="BuildingName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="TotalFlat" class="form-label">Toplam Daire Sayısı</label>
        <input type="number" class="form-control" asp-for="TotalFlat" required>
        <span asp-validation-for="TotalFlat" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>




