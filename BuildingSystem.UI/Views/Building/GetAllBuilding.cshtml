@model IEnumerable<BuildingDto>
@{
    ViewData["Title"] = "GetAllBuilding";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m-0">
    <h3>Siteye Yeni Bir Bina Ekle</h3>
    <a class="btn btn-success btn-sm" asp-controller="Building" asp-action="AddBuilding">
        Bina Ekle
    </a>
</div>
<table id="myDataTable" class="table table-hover table-striped">
    <thead class="thead-light">
        <tr>
            <th scope="col">Binanın İsmi</th>
            <th scope="col">Toplam Daire Sayısı</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan=3>Kayıtlı Bina Mevcut Değildir.</td>
            </tr>
        }
        else
        {
            @foreach (var building in Model)
            {
              <tr>
                    
                    <td>@building.BuildingName</td>
                    <td>@building.TotalFlat</td>
             
                    <td>
                        <a class="btn btn-warning" asp-controller="Building" asp-action="UpdateBuilding"
                         asp-route-id="@building.Id">
                            Güncelle
                    </a>
                        <a class="btn btn-danger" asp-controller="Building" asp-action="DeleteBuilding"
                        asp-route-id="@building.Id">
                        Sil
                    </a>
                    </td>
            </tr>
            }
     
        }

    </tbody>
</table>